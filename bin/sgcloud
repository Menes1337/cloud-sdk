#!/usr/bin/env node

'use strict'

const commander = require('commander')

// set version (includes version command)
const {version} = require('../package.json')
commander.version(version)

// load all custom actions
const glob = require('glob')
const actionFiles = glob.sync('../lib/actions/*.js', {cwd: __dirname, strict: true})
actionFiles.forEach((actionFile) => {
  new (require(actionFile))().register(commander)
})

// activate argument parsing
commander.parse(process.argv)
